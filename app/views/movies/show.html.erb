<strong>Título: </strong>
<%= @movie.title %><br>

<strong>Diretor: </strong>
<%= @movie.director.name %><br>

<strong>Ano de lançamento: </strong>
<%= @movie.release_year %><br>

<strong>Sinopse: </strong>
<%= @movie.synopsis %><br>

<strong>País de origem: </strong>
<%= @movie.origin_country %><br>

<strong>Duração (min): </strong>
<%= @movie.duration %><br>

<strong>Gênero favorito: </strong>
<%= @movie.genre.name %><br>

<strong>Status: </strong>
<%= @movie.status == 'published' ? 'Publicado' : 'Rascunho' %><br>

<strong>Capa do filme: </strong><br>
<% if @movie.cover.attached? %>
  <%= image_tag @movie.cover, style: "width: 200px; display: block" %>
<% else %>
  <%= '(Imagem não existente)' %><br>
<% end %>

<% if @movie.draft? %>
  <% button_message = 'Publicar' %>
<% else %>
  <% button_message = 'Despublicar' %>
<% end %>

<br>
<div style="display: inline-block; margin-right: 10px;">
  <%= button_to 'Editar', edit_movie_path(@movie), method: :get, class: "btn btn-outline-secondary" %>
</div>
<div style="display: inline-block; margin-right: 10px;">
  <%= button_to 'Apagar', @movie, method: :delete, data: { turbo_confirm: "Tem certeza que deseja deletar ?" }, class: "btn btn-outline-danger" %>
</div>
<div style="display: inline-block;">
  <%= button_to button_message, publish_movie_path, method: 'patch', class: "btn btn-outline-success" %>
</div>
<br><br>